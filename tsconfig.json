{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@localization/*": ["./src/localization/*"],
      "@styles/*": ["./styles/*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@models/*": ["./app/Models/*"],
      "@context/*": ["./app/context/*"],
      "@services/*": ["./app/Services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}